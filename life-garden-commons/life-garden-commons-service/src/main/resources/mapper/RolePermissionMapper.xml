<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.garden.life.commons.mapper.RolePermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.garden.life.commons.domain.RolePermission">
        <result column="role_id" property="roleId"/>
        <result column="permission_id" property="permissionId"/>
    </resultMap>

    <!-- 通用查询映射结果 -->
    <resultMap id="RolePermission" type="com.garden.life.commons.domain.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="alias" property="alias"/>
        <result column="create_date" property="createDate"/>
    </resultMap>

    <select id="queryPermissionByRoleId" resultType="com.garden.life.commons.domain.Permission">
        SELECT p.id, p.name, p.parent_id, p.alias, p.create_date
        FROM (SELECT permission_id FROM role_permission where role_id = #{roleId}) AS rp
        LEFT JOIN permission AS p
        ON rp.permission_id = p.id
    </select>
</mapper>
