<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.garden.life.commons.mapper.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.garden.life.commons.domain.RoleMenu">
        <result column="role_id" property="roleId"/>
        <result column="menu_id" property="menuId"/>
    </resultMap>

    <select id="queryMenuByRoleId" resultType="com.garden.life.commons.domain.Menu">
        SELECT m.id, m.name, m.sort, m.component, m.parent_id, m.create_time
        FROM (SELECT menu_id FROM role_menu where role_id = #{roleId}) AS rm
        LEFT JOIN menu AS m
        ON rm.menu_id = m.id
    </select>

</mapper>
